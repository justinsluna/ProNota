            border: none;
            padding: 10px 20px;
            border-radius: 3px;
            cursor: pointer;
        }
        
        .print-btn:hover {
            background-color: #2980b9;
        }

        /* Estilos para la impresión */
        @media print {
            body * {
                visibility: hidden;
            }
            
            .students-container, .students-container * {
                visibility: visible;
            }
            
            .students-container {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                margin: 0;
                padding: 0;
                box-shadow: none;
                border: none;
                background: white;
            }
            
            .no-print, .back-btn, .buttons-container, .group-title {
                display: none !important;
            }
            
            table {
                width: 100%;
                margin-top: 0;
                border: 1px solid #000;
            }
            
            th, td {
                border: 1px solid #000;
                padding: 8px;
                text-align: center;
            }
            
            input[type="number"] {
                border: none;
                width: auto;
                padding: 0;
                -webkit-appearance: none;
                -moz-appearance: textfield;
